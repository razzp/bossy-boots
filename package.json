{
  "name": "bossy-boots",
  "author": "Robert Wells",
  "version": "1.0.1",
  "description": "A helpful collection of type guards and assertions, written in TypeScript.",
  "keywords": [
    "assert",
    "assertion",
    "guard",
    "guards",
    "guarding",
    "type",
    "typescript",
    "javascript",
    "utilities",
    "utility",
    "helpers",
    "helper",
    "library",
    "strict"
  ],
  "license": "MIT",
  "bugs": "https://github.com/razzp/bossy-boots/issues",
  "homepage": "https://github.com/razzp/bossy-boots#readme",
  "repository": "github:razzp/bossy-boots",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/main.cjs",
  "exports": {
    "import": "./dist/main.js",
    "require": "./dist/main.cjs"
  },
  "types": "./types/main.d.ts",
  "files": [
    "dist/**/*.?(c)js",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "prebuild": "npm run prettier",
    "build": "rimraf dist && rollup --config && npm run types",
    "prettier": "prettier --list-different --write *.js src/** tests/** bin/**/*.js",
    "types": "rimraf types && tsc --project tsconfig.types.json",
    "test": "jest --verbose --coverage",
    "docs": "node bin/docs/build.js",
    "prepublishOnly": "npm run test"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.5",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "glob": "^8.0.1",
    "handlebars": "^4.7.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc-api": "^7.1.1",
    "jsdom": "^22.1.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
